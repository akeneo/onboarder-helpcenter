{{!-- Homepage --}}
{{#> layout  title="Akeneo Help center"}}
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/">
                <img height="20" src="/img/onboarder.svg"></img>
            </a>
        </div>
    </div>
</nav>
<div class="jumbotron jumbotron-search">
    <div class="container-fluid">
        <h1 class="text-center emphasis"><img src="img/hello.svg" width="40" style="vertical-align: bottom;"/> Hi there! Can we help you?</h1>
        <div class="row">
            <div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
                <div class="form-group" style="margin: 10px 0;">
                    <input id="docSearch-input" type="text" placeholder="Type your search right here..." class="form-control input-lg">
                </div>
                <small>For instance, try <strong><a href="articles/create-supplier.html">"Create a supplier"</a></strong>, <strong><a href="articles/review-new-products.html">"Review new products"</a></strong> or <strong><a href="articles/supplier-firststeps-definition.html">"What is the Supplier Onboarder?"</a></strong></small>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="persona">
                <a href="/retailer-themes.html">
                    <img class="img-responsive center-block" src="img/retailer-shop.svg"/>
                    <h2 class="text-center">Retailer</h2>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                            <p class="text-center"><em>Everything you ever wanted to know about the Retailer Onboarder</em></p>
                            <button class="btn btn-default btn-block">Browse all articles</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="persona">
                <a href="/supplier-themes.html">
                    <img class="img-responsive center-block" src="img/suppliers-factory.svg"/>
                    <h2 class="text-center">Supplier</h2>
                    <div class="row">
                        <div class="col-xs-offset-1 col-xs-10 col-lg-offset-2 col-lg-8">
                            <p class="text-center"><em>All you need to learn about the Supplier Onboarder</em></p>
                            <button class="btn btn-default btn-block">Browse all articles</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h2>Popular guides</h2>
            <div class="row">
                {{#each popularArticles}}
                <div class="col-xs-12 col-sm-6 col-lg-4">
                    <a href="articles/{{articlePath}}"> <p>{{{articleName}}} ></p></a></div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/layout}}
